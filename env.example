# Brewcode Landing Page - Environment Variables

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/brewcode"

# Authentication
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# Email (SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Analytics
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"
GOOGLE_TAG_MANAGER_ID="GTM-XXXXXXX"

# Social Media
FACEBOOK_APP_ID="your-facebook-app-id"
TWITTER_CREATOR="@brewcode"
INSTAGRAM_USERNAME="@brewcode"

# Maps
MAPBOX_ACCESS_TOKEN="your-mapbox-token"
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# Payment Processing
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# File Storage
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="eu-central-1"
AWS_S3_BUCKET="brewcode-uploads"

# Monitoring
SENTRY_DSN="https://your-sentry-dsn.ingest.sentry.io/..."

# Feature Flags
ENABLE_BLOG=true
ENABLE_COMMENTS=true
ENABLE_ANALYTICS=true
ENABLE_PAYMENTS=true

# Development
NODE_ENV="development"
NEXT_PUBLIC_API_URL="http://localhost:3000/api" 